#!/usr/bin/env python
import re
import sys
import unipath
assert len(sys.argv) == 2, "must provide dir to look in"
assert unipath.Path(sys.argv[1]).isdir(), "dir doesn't exit"
d = sys.argv[1]
r = re.compile(r'.*-(\d+)')
try:
    n = 1 + max(int(r.match(f).groups()[0])
                for f in unipath.Path(d).listdir('run-*'))
except ValueError:
    n = 1
sys.stdout.write(f'{n}')
